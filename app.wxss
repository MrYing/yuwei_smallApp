/**app.wxss**/

page {
  display: flex;
  flex-direction: column;
  height: 100%;
  background: #f5f5f5;
}

.header_search {
  padding: 30rpx 20rpx;
  background: #1a1a1a;
  box-shadow: 0 2rpx 2rpx #e5e5e5;
}

.search {
  background: #f3f3f3;
  color: #909090;
  border-radius: 5px;
  font-size: 24rpx;
  text-align: center;
  outline: none;
  padding: 10rpx;
}

.search_icon {
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.share {
  height: 60rpx;
  color: #fff;
  text-align: center;
  line-height: 60rpx;
  font-size: 32rpx;
  background: #282828;
}
.border::after{
  content:"";
  position:absolute;
  bottom:0;
  display:block;
  width:100%;
  height:1px;
  background:#c6c6c6;
  transform: scaleY(.5)
}